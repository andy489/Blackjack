<?xml version="1.1" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet author="andy489" id="1">
        <loadData commentLineStartsWith="#" encoding="UTF-8" file="./db/changelog/data/roles.csv"
                  quotchar="&quot;" separator="," tableName="roles">
            <column header="id" name="id" type="NUMERIC"/>
            <column header="role" name="role" type="STRING"/>
        </loadData>
    </changeSet>

    <changeSet author="andy489" id="2">
        <loadData commentLineStartsWith="#" encoding="UTF-8" file="./db/changelog/data/users.csv"
                  quotchar="&quot;" separator="," tableName="users">
            <column header="id" name="id" type="NUMERIC"/>
            <column header="username" name="username" type="STRING"/>
            <column header="birth_date" name="birth_date" type="date"/>
            <column header="gender" name="gender" type="ENUM('MALE','FEMALE','UNSPECIFIED')"/>
            <column header="email" name="email" type="STRING"/>
            <column header="first_name" name="first_name" type="STRING"/>
            <column header="last_name" name="last_name" type="STRING"/>
            <column header="is_active" name="is_active" type="BOOLEAN"/>
            <column header="password" name="password" type="STRING"/>
        </loadData>
    </changeSet>

    <changeSet author="andy489" id="3">
        <loadData commentLineStartsWith="#" encoding="UTF-8" file="db/changelog/data/users_roles.csv"
                  quotchar="&quot;" separator="," tableName="users_roles">
            <column header="user_id" name="user_id" type="NUMERIC"/>
            <column header="role_id" name="role_id" type="NUMERIC"/>
        </loadData>
    </changeSet>

    <changeSet author="andy489" id="4">
        <loadData commentLineStartsWith="#" encoding="UTF-8" file="db/changelog/data/activation_tokens.csv"
                  quotchar="&quot;" separator="," tableName="activation_tokens">
            <column header="id" name="id" type="NUMERIC"/>
            <column header="activation_token" name="activation_token" type="STRING"/>
            <column header="created_at" name="created_at" type="datetime"/>
            <column header="user_id" name="user_id" type="NUMERIC"/>
        </loadData>
    </changeSet>

</databaseChangeLog>